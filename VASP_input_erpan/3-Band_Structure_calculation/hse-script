b=$(pwd);for x in $(find -type d -name "hse-geo"); do cd $x; echo $x; cp ../../HSE_kps .; mkdir hse-bands; cp {INCAR,POTCAR,CONTCAR5} hse-bands/; cp ../../script.sh hse-bands/;mv hse-bands/CONTCAR5 hse-bands/POSCAR; cp ../IBZKPT hse-bands/KP; cat HSE_kps >> hse-bands/KP;awk 'NR ==2 {$1=$1+68}1' hse-bands/KP > hse-bands/KPOINTS; sed -i '/NSW/s/300/0/g' hse-bands/INCAR; sed -i '/NKREDX/s/NKREDX/!NKREDX/g' hse-bands/INCAR; sed -i '/NKREDY/s/NKREDY/!NKREDY/g' hse-bands/INCAR; sed -i '/NKREDZ/s/NKREDZ/!NKREDZ/g' hse-bands/INCAR; sed -i '/PRECFOCK/s/Fast/Normal/g' hse-bands/INCAR;rm -f hse-bands/KP;cd $b; done


